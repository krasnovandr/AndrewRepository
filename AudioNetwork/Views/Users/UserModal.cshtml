<div class="modal-header">
    <h3 class="modal-title">Участники</h3>
</div>

<div class="modal-body pre-scrollable" >
    <div ng-repeat="user in currentConversationPeople">
        <div class=" thumbnail clearfix ">
            <img class="pull-left" ng-src="{{user.AvatarFilePath}}" width="50" height="50" />
            <a href="/#/Users/{{user.Id}} ">{{user.UserName}}</a>
            <span>{{user.LastActivityDate}}</span>
            <button class="btn-default pull-right" ng-click="removeUserFromConversation(user)">
                <span class="glyphicon glyphicon-remove-circle"></span>
            </button>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button class="close" ng-click="cancel()">закрыть</button>
</div>
